-- TELESCOPE (Buscador)
-- â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

local telescope_builtin = require('telescope.builtin')

-- <leader>ff = [F]ind [F]iles (busca arquivos por nome)
vim.keymap.set('n', '<leader>ff', telescope_builtin.find_files, { desc = 'Find Files' })

-- <leader>fg = [F]ind by [G]rep (busca texto dentro de todos os arquivos)
vim.keymap.set('n', '<leader>fg', telescope_builtin.live_grep, { desc = 'Live Grep' })

-- <leader>fb = [F]ind [B]uffers (busca em arquivos jÃ¡ abertos)
vim.keymap.set('n', '<leader>fb', telescope_builtin.buffers, { desc = 'Find Buffers' })

-- <leader>fh = [F]ind [H]elp (busca na documentaÃ§Ã£o do Neovim)
vim.keymap.set('n', '<leader>fh', telescope_builtin.help_tags, { desc = 'Help Tags' })

-- ============================================================================
-- SEÃ‡ÃƒO 7: CONFIGURAÃ‡Ã•ES DO EDITOR (Opcionais, mas recomendadas)
-- ============================================================================

local opt = vim.opt

opt.number = true          -- Mostra nÃºmeros de linha
opt.relativenumber = true  -- NÃºmeros relativos (Ãºtil para pular linhas com 5j, 10k)
opt.mouse = 'a'            -- Habilita o mouse em todos os modos
opt.ignorecase = true      -- Busca ignora maiÃºsculas/minÃºsculas
opt.smartcase = true       -- ...exceto se vocÃª digitar maiÃºsculas
opt.hlsearch = true        -- Destaca resultados da busca
opt.wrap = false           -- NÃ£o quebra linhas longas
opt.tabstop = 4            -- Tab = 4 espaÃ§os
opt.shiftwidth = 4         -- IndentaÃ§Ã£o = 4 espaÃ§os
opt.expandtab = true       -- Converte Tab em espaÃ§os
opt.cursorline = true      -- Destaca a linha atual
opt.termguicolors = true   -- Cores RGB no terminal (necessÃ¡rio para temas modernos)
opt.signcolumn = 'yes'     -- Sempre mostra a coluna de sinais (evita o texto "pular")
opt.clipboard = 'unnamedplus' -- Usa a Ã¡rea de transferÃªncia do sistema (Ctrl+C/V)

