-- ============================================================================
-- SEÃ‡ÃƒO 4: CONFIGURAÃ‡ÃƒO DO AUTOCOMPLETAR (nvim-cmp)
-- ============================================================================

local cmp = require('cmp')

cmp.setup({
  -- ConfiguraÃ§Ã£o de snippets (atalhos de cÃ³digo expandÃ­veis)
  snippet = {
    expand = function(args)
      require('luasnip').lsp_expand(args.body)
    end,
  },

  -- Mapeamentos de teclas do menu de autocompletar
  mapping = cmp.mapping.preset.insert({
    ['<C-b>']     = cmp.mapping.scroll_docs(-4),        -- Scroll para cima na documentaÃ§Ã£o
    ['<C-f>']     = cmp.mapping.scroll_docs(4),         -- Scroll para baixo na documentaÃ§Ã£o
    ['<C-Space>'] = cmp.mapping.complete(),             -- ForÃ§a abrir o menu
    ['<CR>']      = cmp.mapping.confirm({ select = true }), -- Enter confirma a seleÃ§Ã£o
    ['<Tab>']     = cmp.mapping.select_next_item(),     -- Tab vai para o prÃ³ximo item
    ['<S-Tab>']   = cmp.mapping.select_prev_item(),     -- Shift+Tab volta para o anterior
  }),

  -- De onde vÃªm as sugestÃµes (ordem de prioridade)
  sources = cmp.config.sources({
    { name = 'nvim_lsp' },  -- SugestÃµes do Language Server
    { name = 'luasnip' },   -- Snippets
  }),
})

-- ============================================================================
-- SEÃ‡ÃƒO 5: CONFIGURAÃ‡ÃƒO DO LSP (Language Server Protocol)
-- ============================================================================

-- ObtÃ©m as capacidades do cmp-nvim-lsp para que o LSP saiba
-- que o editor suporta autocompletar avanÃ§ado.
local capabilities = require('cmp_nvim_lsp').default_capabilities()

-- Configura o Mason-lspconfig para instalar e configurar os servidores LSP
require('mason-lspconfig').setup({
  -- Lista de servidores LSP que serÃ£o instalados automaticamente
  ensure_installed = { 'pyright', 'ruff' },
})

-- â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
-- PYRIGHT: LSP principal para Python
-- Oferece autocompletar, ir para definiÃ§Ã£o, hover (documentaÃ§Ã£o), etc.
-- â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
vim.lsp.config('pyright', {
  capabilities = capabilities,
})
vim.lsp.enable('pyright')

-- â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
-- RUFF: Linter/Formatter para Python (muito rÃ¡pido!)
-- Mostra erros de estilo e pode formatar o cÃ³digo.
-- Desabilitamos o hover dele porque o Pyright jÃ¡ faz isso melhor.
-- â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
vim.lsp.config('ruff', {
  capabilities = capabilities,
  on_attach = function(client, bufnr)
    -- Desativa o hover do Ruff para nÃ£o conflitar com o Pyright
    client.server_capabilities.hoverProvider = false
  end,
})
vim.lsp.enable('ruff')

-- â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
-- Atalhos do LSP (sÃ³ funcionam quando um servidor LSP estÃ¡ ativo no arquivo)
-- â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
vim.api.nvim_create_autocmd('LspAttach', {
  desc = 'Configura atalhos do LSP quando um servidor se conecta',
  callback = function(ev)
    local opts = { buffer = ev.buf }

    -- gd = Go to Definition (vai para onde a funÃ§Ã£o/variÃ¡vel foi definida)
    vim.keymap.set('n', 'gd', vim.lsp.buf.definition, opts)

    -- K = Hover (mostra documentaÃ§Ã£o da funÃ§Ã£o em um popup)
    vim.keymap.set('n', 'K', vim.lsp.buf.hover, opts)

    -- <leader>rn = Rename (renomeia a variÃ¡vel em todo o projeto)
    vim.keymap.set('n', '<leader>rn', vim.lsp.buf.rename, opts)

    -- <leader>ca = Code Action (mostra sugestÃµes de correÃ§Ã£o rÃ¡pida)
    vim.keymap.set('n', '<leader>ca', vim.lsp.buf.code_action, opts)

    -- gr = Go to References (mostra onde a funÃ§Ã£o/variÃ¡vel Ã© usada)
    vim.keymap.set('n', 'gr', vim.lsp.buf.references, opts)
  end,
})

-- ============================================================================
-- SEÃ‡ÃƒO 6: ATALHOS DE TECLADO (Keymaps)
-- ============================================================================

-- â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
-- NVIM-TREE (Explorador de Arquivos)
-- â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

-- <leader>e = Abre/fecha a Ã¡rvore de arquivos
vim.keymap.set('n', '<leader>e', ':NvimTreeToggle<CR>', { silent = true, desc = 'Toggle NvimTree' })

